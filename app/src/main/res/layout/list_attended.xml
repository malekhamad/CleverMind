<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="#ffffff">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/attended_course_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/google" />

        <TextView
            android:id="@+id/attended_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="android full track development"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@+id/attend_now_btn"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toEndOf="@+id/attended_course_image"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/attend_now_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="invisible"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/attend_now_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/attended_day_label"
            app:srcCompat="@drawable/right" />

        <TextView
            android:id="@+id/attended_day_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thr - Sun"
            android:padding="2dp"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintEnd_toEndOf="@+id/attended_title_label"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/attended_title_label"
            app:layout_constraintTop_toBottomOf="@+id/attended_title_label" />

        <TextView
            android:id="@+id/attended_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="10:00AM - 11:00AM"
            android:textColor="@android:color/holo_blue_light"
            app:layout_constraintEnd_toEndOf="@+id/attended_title_label"
            app:layout_constraintStart_toStartOf="@+id/attended_title_label"
            app:layout_constraintTop_toBottomOf="@+id/attended_day_label" />

        <TextView
            android:id="@+id/attended_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Attended"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="@+id/attended_time_label"
            app:layout_constraintStart_toStartOf="@+id/attended_time_label"
            app:layout_constraintTop_toBottomOf="@+id/attended_time_label" />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>

